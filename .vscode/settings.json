{
  "python.defaultInterpreterPath": "${env.HOME}\\.conda\\envs\\mpydev\\python.exe",
  "python.languageServer": "Pylance",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.analysis.extraPaths": [
    // NOTE: when updating this list, also update ../.pylintrc
    "./src/lib",
    "../github/ads1x15",
    "../github/micropython-async/v3",
    "../github/micropython-mqtt",
    "../github/micropython-stubs/stubs/micropython-1_18-frozen/esp32/GENERIC",
    "../github/micropython-stubs/stubs/cpython_core",
    "../github/micropython-stubs/stubs/micropython-v1_17-esp32",
    "../picoweb"
  ],
  "cSpell.language": "en",
  "cSpell.words": [
    "aclose",
    "asyncio",
    "atten",
    "autopep",
    "awrite",
    "Br",
    "Br√∂nald",
    "BronartsmeiH",
    "conda",
    "coro",
    "devkit",
    "dietpi",
    "dmesg",
    "esptool",
    "essid",
    "Helvetica",
    "hexlify",
    "Hothap",
    "isconnected",
    "Josverl",
    "micropython",
    "mktime",
    "mpfshell",
    "mpydev",
    "mqtt",
    "nald",
    "ntptime",
    "osdebug",
    "picoweb",
    "Reuz",
    "ssid",
    "stdev",
    "stty",
    "stubber",
    "uasyncio",
    "ubinascii",
    "ujson",
    "webrepl",
    "WLAN"
  ],
  "python.linting.pycodestyleArgs": [
    "--max-line-length=132"
  ],
  "python.formatting.autopep8Args": [
    "--max-line-length=132"
  ],
  "editor.rulers": [
    132
  ],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnSaveMode": "modifications",
  "terminal.integrated.commandsToSkipShell": [
    "-workbench.action.quickOpenView"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.typeshedPaths": [
    "../github/micropython-stubs/stubs/micropython-1_18-frozen/esp32/GENERIC",
    "../github/micropython-stubs/stubs/cpython_core",
    "../github/micropython-stubs/stubs/micropython-v1_17-esp32"
  ]
}
