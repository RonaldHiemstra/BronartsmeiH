# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# do it for all (default) unless overwriting by closer file description
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 132

[*.py]
indent_size = 4

[*.{md,txt}]
indent_size = 4
trim_trailing_whitespace = false

